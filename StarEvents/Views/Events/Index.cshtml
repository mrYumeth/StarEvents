@model IEnumerable<StarEvents.ViewModels.EventViewModel>
@{
    ViewData["Title"] = "Browse Events";
    // Get current filter/sort values from ViewBag for preserving state
    var currentCategory = ViewBag.CurrentCategory as string;
    var currentLocation = ViewBag.CurrentLocation as string;
    var currentDateFrom = ViewBag.CurrentDateFrom as string;
    var currentKeyword = ViewBag.CurrentKeyword as string;
    var currentSort = ViewBag.CurrentSort as string;
}

<style>
    /* Your existing CSS can remain exactly the same */
    .events-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 0 40px 0;
        margin-bottom: 40px;
        border-radius: 0 0 30px 30px;
    }

        .events-hero h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .events-hero p {
            font-size: 1.2rem;
            opacity: 0.95;
        }

    .search-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        margin-top: -30px;
        position: relative;
        z-index: 10;
    }

    .search-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .filter-group {
        margin-bottom: 20px;
    }

    .filter-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
        display: block;
    }

    .filter-input, .filter-select {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .filter-input:focus, .filter-select:focus {
            border-color: #667eea;
            outline: none;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

    .btn-search {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 14px 40px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1.1rem;
        width: 100%;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }

    .btn-reset {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
        padding: 14px 40px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1.1rem;
        width: 100%;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .btn-reset:hover {
            background: #f8f9fa;
        }

    .results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e0e0e0;
    }

    .results-count {
        font-size: 1.3rem;
        font-weight: 700;
        color: #333;
    }

    .sort-dropdown {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .event-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .event-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

    .event-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        position: relative;
    }

    .event-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        z-index: 5;
    }

    .event-content {
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .event-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 12px;
        line-height: 1.3;
    }

    .event-meta {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 15px;
        font-size: 0.95rem;
        color: #666;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .event-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 15px;
        margin-top: auto;
    }

    .btn-view-details {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        transition: all 0.3s ease;
    }

        .btn-view-details:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .no-events {
        text-align: center;
        padding: 80px 20px;
    }
</style>

<div class="events-hero">
    <div class="container text-center">
        <h1>🎉 Discover Amazing Events</h1>
        <p>Find concerts, shows, and experiences near you</p>
    </div>
</div>

<div class="container">
    <div class="search-card">
        <h2 class="search-title">🔍 Search Events</h2>

        <form id="filterForm" asp-action="Index" asp-controller="Events" method="get">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="filter-group">
                        <label class="filter-label">Category</label>
                        <select name="category" class="filter-select" asp-for="@currentCategory">
                            <option value="">All Categories</option>
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var cat in (List<string>)ViewBag.Categories)
                                {
                                    <option value="@cat">@cat</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="filter-group">
                        <label class="filter-label">Location</label>
                        <select name="location" class="filter-select" asp-for="@currentLocation">
                            <option value="">All Locations</option>
                            @if (ViewBag.Locations != null)
                            {
                                foreach (var loc in (List<string>)ViewBag.Locations)
                                {
                                    <option value="@loc">@loc</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="filter-group">
                        <label class="filter-label">Date From</label>
                        <input type="date" name="dateFrom" class="filter-input" asp-for="@currentDateFrom" />
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="filter-group">
                        <label class="filter-label">Keyword</label>
                        <input type="text" name="keyword" class="filter-input" placeholder="Search events..." asp-for="@currentKeyword" />
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6 mb-2">
                    <button type="submit" class="btn-search">🔍 Search Events</button>
                </div>
                <div class="col-md-6 mb-2">
                    <a href="@Url.Action("Index", "Events")" class="btn-reset">🔄 Reset Filters</a>
                </div>
            </div>

            <input type="hidden" name="sortBy" value="@currentSort" />
        </form>
    </div>

    <div class="mt-5">
        @if (Model != null && Model.Any())
        {
            <div class="results-header">
                <div class="results-count">📋 Found @Model.Count() Events</div>
                <div class="sort-dropdown">
                    <label style="font-weight: 600; color: #666;">Sort by:</label>
                    <select id="sortControl" class="filter-select" style="width: auto;">
                        <option value="date-asc" selected="@(currentSort == "date-asc" || string.IsNullOrEmpty(currentSort))">Date (Earliest)</option>
                        <option value="date-desc" selected="@(currentSort == "date-desc")">Date (Latest)</option>
                        <option value="price-asc" selected="@(currentSort == "price-asc")">Price (Low-High)</option>
                        <option value="price-desc" selected="@(currentSort == "price-desc")">Price (High-Low)</option>
                        <option value="name-asc" selected="@(currentSort == "name-asc")">Name (A-Z)</option>
                        <option value="name-desc" selected="@(currentSort == "name-desc")">Name (Z-A)</option>
                    </select>
                </div>
            </div>

            <div class="row" id="eventsGrid">
                @foreach (var evt in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="event-card">
                            <div style="position: relative;">
                                <img src="@evt.ImageUrl" alt="@evt.Title" class="event-image" onerror="this.onerror=null;this.src='/images/default-event.jpg';" />
                                <span class="event-badge">@evt.Category</span>
                            </div>
                            <div class="event-content">
                                <h3 class="event-title">@evt.Title</h3>
                                <div class="event-meta">
                                    <div class="meta-item">📅 @evt.DateRange</div>
                                    <div class="meta-item">📍 @evt.LocationName</div>
                                </div>
                                <div class="event-price">@evt.PriceDisplay</div>
                                <a href="@Url.Action("Details", "Events", new { id = evt.Id })" class="btn-view-details">View Details →</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-events">
                <h3>😔 No Events Found</h3>
                <p>Try adjusting your search filters or check back later for new events.</p>
                <a href="@Url.Action("Index", "Events")" class="btn-search" style="width: auto; display: inline-block; margin-top: 20px;">View All Events</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sortControl = document.getElementById('sortControl');
            const filterForm = document.getElementById('filterForm');

            // NEW: Auto-submit form on sort change
            if (sortControl && filterForm) {
                sortControl.addEventListener('change', function () {
                    // Set the hidden sortBy field in the form with the new value
                    filterForm.querySelector('input[name="sortBy"]').value = this.value;
                    // Submit the form
                    filterForm.submit();
                });
            }
        });
    </script>
}