@model IEnumerable<StarEvents.ViewModels.EventViewModel>
@{
    ViewData["Title"] = "Browse Events";
}

@section Styles {
    <style>
        .filter-section {
            background-color: #3a3a3a;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .event-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
        }

        .event-card {
            background-color: #2b2b2b;
            border: 1px solid #444;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.2s;
        }

            .event-card:hover {
                transform: translateY(-5px);
            }

        .event-card-img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .event-card-body {
            padding: 15px;
        }

        .event-title {
            font-size: 1.2rem;
            font-weight: bold;
        }
    </style>
}

<div class="container my-5">
    <h1 class="text-center mb-4">Browse Events</h1>

    <!-- Filter Section -->
    <div class="filter-section">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-3">
                    <!-- FIX: Populate Category Dropdown -->
                    <select name="category" class="form-select" asp-items="@ViewBag.Categories">
                        <option value="">All Categories</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <!-- FIX: Populate Location Dropdown -->
                    <select name="location" class="form-select" asp-items="@ViewBag.Locations">
                        <option value="">All Locations</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input name="dateFrom" type="date" class="form-control" value="@ViewBag.CurrentDateFrom" />
                </div>
                <div class="col-md-3">
                    <input name="keyword" type="text" class="form-control" placeholder="Search by keyword..." value="@ViewBag.CurrentKeyword" />
                </div>
                <div class="col-md-1 d-grid">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </form>
    </div>

    <!-- Event Grid -->
    <div class="event-grid">
        @foreach (var item in Model)
        {
            <div class="event-card">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/default-event.jpg" : item.ImageUrl)"
                         class="event-card-img" alt="@item.Title" onerror="this.src='/images/default-event.jpg'" />
                </a>
                <div class="event-card-body">
                    <h5 class="event-title">@item.Title</h5>
                    <p class="card-text text-muted">@item.DateRange</p>
                    <p class="card-text"><i class="fas fa-map-marker-alt"></i> @item.LocationName</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@item.PriceDisplay</span>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-5">
            <p class="lead">No events found matching your criteria. Try adjusting your search.</p>
        </div>
    }
</div>
