@model StarEvents.ViewModels.EventDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<style>
    .details-container {
        padding: 40px 0;
    }

    .event-image-section {
        width: 100%;
        height: 400px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        overflow: hidden;
        margin-bottom: 30px;
        position: relative;
    }

    .event-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .event-badge-overlay {
        position: absolute;
        top: 20px;
        left: 20px;
        background: rgba(255, 255, 255, 0.95);
        color: #667eea;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 700;
        font-size: 1rem;
    }

    .event-header {
        margin-bottom: 30px;
    }

    .event-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 15px;
        color: white !important;
    }

    .event-organizer {
        font-size: 1.1rem;
        color: #666;
        margin-bottom: 20px;
        color: white !important;
    }

    .info-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        margin-bottom: 30px;
    }

    .info-section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px;
        margin-bottom: 20px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .info-label {
        font-weight: 600;
        color: #667eea;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .info-value {
        font-size: 1.1rem;
        color: #333;
        font-weight: 500;
    }

    .description-text {
        line-height: 1.8;
        color: #555;
        font-size: 1.05rem;
    }

    .booking-sidebar {
        position: sticky;
        top: 20px;
    }

    .booking-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        border: 3px solid #667eea;
    }

    .booking-card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .price-display {
        text-align: center;
        margin-bottom: 25px;
    }

    .price-label {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 5px;
    }

    .price-amount {
        font-size: 2.5rem;
        font-weight: 700;
        color: #667eea;
    }

    .availability-info {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
        text-align: center;
    }

    .availability-label {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 5px;
    }

    .availability-count {
        font-size: 1.3rem;
        font-weight: 700;
        color: #28a745;
    }

    .btn-book-tickets {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 18px 40px;
        border-radius: 25px;
        font-size: 1.2rem;
        font-weight: 600;
        width: 100%;
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
        text-align: center;
    }

        .btn-book-tickets:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .benefits-list {
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }

        .benefits-list li {
            padding: 10px 0;
            color: #555;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .benefits-list li::before {
                content: "✓";
                color: #28a745;
                font-weight: 700;
                font-size: 1.2rem;
            }

    .share-section {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #f0f0f0;
        text-align: center;
    }

    .share-title {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 15px;
    }

    .share-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn-share {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-share:hover {
            transform: translateY(-3px);
        }

    .btn-facebook {
        background: #3b5998;
        color: white;
    }

    .btn-twitter {
        background: #1da1f2;
        color: white;
    }

    .btn-whatsapp {
        background: #25d366;
        color: white;
    }

    .btn-email {
        background: #ea4335;
        color: white;
    }

    @@media (max-width: 768px) {
        .event-title {
            font-size: 1.8rem;
        }

        .event-image-section {
            height: 250px;
        }
    }
</style>

<div class="details-container">
    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" style="margin-bottom: 20px;">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Events")">Events</a></li>
                <li class="breadcrumb-item active">@Model.Title</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Event Image -->
                <div class="event-image-section">
                    <img src="/images/default-event.jpg" alt="@Model.Title" class="event-image" />
                    <span class="event-badge-overlay">@Model.Category</span>
                </div>

                <!-- Event Header -->
                <div class="event-header">
                    <h1 class="event-title">@Model.Title</h1>
                    <p class="event-organizer">
                        🎪 Organized by <strong>@Model.OrganizerName</strong>
                    </p>
                </div>

                <!-- Event Information Card -->
                <div class="info-card">
                    <h2 class="info-section-title">📅 Event Details</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <span class="info-label">📆 Date & Time</span>
                            <span class="info-value">@Model.DateDisplay</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">📍 Venue</span>
                            <span class="info-value">@Model.VenueName</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">🌆 Location</span>
                            <span class="info-value">@Model.VenueCity</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">🎭 Category</span>
                            <span class="info-value">@Model.Category</span>
                        </div>
                    </div>
                    <div class="info-item" style="margin-top: 15px;">
                        <span class="info-label">📍 Full Address</span>
                        <span class="info-value">@Model.VenueAddress</span>
                    </div>
                </div>

                <!-- Description Card -->
                <div class="info-card">
                    <h2 class="info-section-title">📖 About This Event</h2>
                    <p class="description-text">@Model.Description</p>
                </div>
            </div>

            <!-- Booking Sidebar -->
            <div class="col-lg-4">
                <div class="booking-sidebar">
                    <div class="booking-card">
                        <h3 class="booking-card-title">🎫 Book Your Tickets</h3>

                        <!-- Price Display -->
                        <div class="price-display">
                            <div class="price-label">Ticket Price</div>
                            <div class="price-amount">@Model.TicketPrice</div>
                        </div>

                        <!-- Availability -->
                        <div class="availability-info">
                            <div class="availability-label">Available Tickets</div>
                            <div class="availability-count">@Model.AvailableTickets</div>
                        </div>

                        <!-- Book Button -->
                        <a href="@Url.Action("Book", "Bookings", new { id = Model.Id })" class="btn-book-tickets">
                            Book Now →
                        </a>

                        <!-- Benefits -->
                        <ul class="benefits-list">
                            <li>Instant booking confirmation</li>
                            <li>E-tickets with QR codes</li>
                            <li>Earn loyalty points</li>
                            <li>Secure payment</li>
                        </ul>

                        <!-- Share Section -->
                        <div class="share-section">
                            <div class="share-title">Share this event</div>
                            <div class="share-buttons">
                                <a href="#" class="btn-share btn-facebook" title="Share on Facebook">f</a>
                                <a href="#" class="btn-share btn-twitter" title="Share on Twitter">𝕏</a>
                                <a href="#" class="btn-share btn-whatsapp" title="Share on WhatsApp">W</a>
                                <a href="#" class="btn-share btn-email" title="Share via Email">✉</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>