@using StarEvents.ViewModels // 1. Important: Reference the ViewModels folder
@model List<EventViewModel> // 2. The view expects a list of EventViewModel objects

@{
    ViewData["Title"] = "Search Events - StarEvents";
}

<h1>Upcoming Events</h1>

<p>Welcome to StarEvents! Use the search bar below to find your next concert or show.</p>

<hr />

<form asp-controller="Customer" asp-action="Search" method="post">
    <div style="margin-bottom: 15px;">

        <label for="Category">Category:</label>
        <input type="text" id="Category" name="Category" placeholder="Music, Theatre, etc." />

        <label for="Date" style="margin-left: 20px;">Date:</label>
        <input type="date" id="Date" name="Date" />

        <label for="Location" style="margin-left: 20px;">Location:</label>
        <input type="text" id="Location" name="Location" placeholder="Colombo, Kandy, etc." />

        <button type="submit" style="margin-left: 20px;">Search</button>
    </div>
</form>

<hr />

<h2>Search Results (@Model.Count)</h2>

@if (Model.Count == 0)
{
    <p>No events found matching your criteria. Try searching without filters!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Date</th>
                <th>Location</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Category</td>
                    <td>@item.DateRange</td>
                    <td>@item.LocationName</td>
                    <td>@item.PriceDisplay</td>
                    <td>
                        <a href="#">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}