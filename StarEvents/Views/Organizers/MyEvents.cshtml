@model IEnumerable<StarEvents.Data.Event>

@{
    ViewData["Title"] = "My Events";
}

<div class="container mt-5">
    <h2 class="mb-4">My Events</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Event Name</th>
                    <th>Category</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evt in Model)
                {
                    <tr>
                        <td>@evt.Title</td>
                        <td>@evt.Category</td>
                        <td>@evt.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@(evt.EndDate.HasValue? evt.EndDate.Value.ToString("yyyy-MM-dd") : "-")</td>
                        <td>
                            <span class="badge bg-@(evt.Status == "Published" ? "success" : evt.Status == "Cancelled" ? "danger" : "secondary")">
                                @evt.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-4">
            You haven't created any events yet. <a asp-action="CreateEvent" class="alert-link">Create one now</a>.
        </div>
    }
</div>
