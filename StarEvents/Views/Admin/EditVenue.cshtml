@model StarEvents.Models.Venue
@{
    ViewData["Title"] = Model?.Id > 0 ? "Edit Venue" : "Create Venue";
    var isEdit = Model?.Id > 0;
}

<style>
    .venue-form-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .form-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 30px 40px;
        border-radius: 15px 15px 0 0;
        margin-bottom: 0;
    }

        .form-header h1 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
        }

    .form-card {
        background: white;
        border-radius: 0 0 15px 15px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

        .form-label.required::after {
            content: " *";
            color: #dc3545;
        }

    .form-input,
    .form-textarea {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-input:focus,
        .form-textarea:focus {
            border-color: #dc3545;
            outline: none;
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1);
        }

    .form-textarea {
        resize: vertical;
        min-height: 100px;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 15px;
    }

    .form-check-input {
        width: 20px;
        height: 20px;
        cursor: pointer;
    }

    .form-check-label {
        font-weight: 500;
        color: #555;
        cursor: pointer;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 2px solid #f0f0f0;
    }

    .btn-save {
        flex: 1;
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        border: none;
        padding: 15px 40px;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(220, 53, 69, 0.4);
        }

    .btn-cancel {
        flex: 1;
        background: white;
        color: #dc3545;
        border: 2px solid #dc3545;
        padding: 15px 40px;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #f8f9fa;
            color: #dc3545;
        }

    .help-text {
        font-size: 0.85rem;
        color: #999;
        margin-top: 5px;
    }

    @@media (max-width: 768px) {
        .form-actions {
            flex-direction: column;
        }
    }
</style>

<div class="venue-form-container">
    <div class="form-header">
        <h1>@(isEdit ? "✏️ Edit Venue" : "➕ Create New Venue")</h1>
    </div>

    <div class="form-card">
        <form asp-action="@(isEdit ? "EditVenue" : "CreateVenue")" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            @if (isEdit)
            {
                <input type="hidden" asp-for="Id" />
            }

            <!-- Venue Name -->
            <div class="form-group">
                <label asp-for="VenueName" class="form-label required"></label>
                <input asp-for="VenueName" class="form-input"
                       placeholder="e.g., Colombo Arena" required />
                <span asp-validation-for="VenueName" class="text-danger"></span>
                <div class="help-text">The official name of the venue</div>
            </div>

            <!-- Address -->
            <div class="form-group">
                <label asp-for="Address" class="form-label required"></label>
                <input asp-for="Address" class="form-input"
                       placeholder="e.g., 123 Galle Road" required />
                <span asp-validation-for="Address" class="text-danger"></span>
                <div class="help-text">Street address of the venue</div>
            </div>

            <!-- City -->
            <div class="form-group">
                <label asp-for="City" class="form-label required"></label>
                <select asp-for="City" class="form-input" required>
                    <option value="">-- Select City --</option>
                    <option value="Colombo">Colombo</option>
                    <option value="Kandy">Kandy</option>
                    <option value="Galle">Galle</option>
                    <option value="Negombo">Negombo</option>
                    <option value="Jaffna">Jaffna</option>
                    <option value="Matara">Matara</option>
                    <option value="Anuradhapura">Anuradhapura</option>
                    <option value="Trincomalee">Trincomalee</option>
                    <option value="Batticaloa">Batticaloa</option>
                    <option value="Kurunegala">Kurunegala</option>
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
                <div class="help-text">City where the venue is located</div>
            </div>

            <!-- Capacity -->
            <div class="form-group">
                <label asp-for="Capacity" class="form-label required"></label>
                <input asp-for="Capacity" type="number" class="form-input"
                       placeholder="e.g., 5000" min="1" required />
                <span asp-validation-for="Capacity" class="text-danger"></span>
                <div class="help-text">Maximum number of people the venue can accommodate</div>
            </div>

            <!-- Phone Number -->
            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" type="tel" class="form-input"
                       placeholder="e.g., +94 11 234 5678" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <div class="help-text">Contact number for the venue (optional)</div>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-textarea"
                          placeholder="Describe the venue facilities, parking, accessibility, etc."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="help-text">Additional information about the venue (optional)</div>
            </div>

            <!-- Is Active Checkbox -->
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">
                    Venue is active and available for events
                </label>
            </div>

            <!-- Action Buttons -->
            <div class="form-actions">
                <button type="submit" class="btn-save">
                    @(isEdit ? "💾 Save Changes" : "➕ Create Venue")
                </button>
                <a href="@Url.Action("ManageVenues", "Admin")" class="btn-cancel">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}