@model StarEvents.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-cards">
    <div class="dashboard-card users">
        <div class="card-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="card-title">Total Users</div>
        <div class="card-value" id="total-users">@Model.TotalUsers</div>
        <div class="card-change">
            <i class="fas fa-arrow-up"></i> +12% from last month
        </div>
    </div>

    <div class="dashboard-card events">
        <div class="card-icon">
            <i class="fas fa-calendar-alt"></i>
        </div>
        <div class="card-title">Total Events</div>
        <div class="card-value" id="total-events">@Model.TotalEvents</div>
        <div class="card-change">
            <i class="fas fa-arrow-up"></i> +8% from last month
        </div>
    </div>

    <div class="dashboard-card venues">
        <div class="card-icon">
            <i class="fas fa-map-marker-alt"></i>
        </div>
        <div class="card-title">Total Venues</div>
        <div class="card-value" id="total-venues">@Model.TotalVenues</div>
        <div class="card-change">
            <i class="fas fa-arrow-right"></i> No change
        </div>
    </div>

    <div class="dashboard-card bookings">
        <div class="card-icon">
            <i class="fas fa-ticket-alt"></i>
        </div>
        <div class="card-title">Total Bookings</div>
        <div class="card-value" id="total-bookings">@Model.TotalBookings</div>
        <div class="card-change">
            <i class="fas fa-arrow-up"></i> +25% from last month
        </div>
    </div>
</div>

<div class="recent-items">
    <div class="recent-card">
        <h5><i class="fas fa-calendar-alt"></i> Recent Events</h5>
        @if (Model.RecentEvents.Any())
        {
            @foreach (var eventItem in Model.RecentEvents)
            {
                <div class="recent-item">
                    <div class="recent-item-icon">
                        <i class="fas fa-music"></i>
                    </div>
                    <div class="recent-item-content">
                        <div class="recent-item-title">@eventItem.Title</div>
                        <div class="recent-item-subtitle">
                            @eventItem.StartDate.ToString("MMM dd, yyyy") • @eventItem.Status
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No events found.</p>
        }
        <div class="mt-3">
            <a asp-action="Events" class="btn btn-admin btn-admin-primary btn-sm">
                View All Events <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>

    <div class="recent-card">
        <h5><i class="fas fa-users"></i> Recent Users</h5>
        @if (Model.RecentUsers.Any())
        {
            @foreach (var user in Model.RecentUsers)
            {
                <div class="recent-item">
                    <div class="recent-item-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="recent-item-content">
                        <div class="recent-item-title">@user.FirstName @user.LastName</div>
                        <div class="recent-item-subtitle">
                            @user.Email • @user.LoyaltyPoints points
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No users found.</p>
        }
        <div class="mt-3">
            <a asp-action="Users" class="btn btn-admin btn-admin-primary btn-sm">
                View All Users <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="admin-table">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Quick Actions</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><i class="fas fa-plus-circle text-success"></i> Create New Event</td>
                                <td>
                                    <a asp-action="CreateEvent" class="btn btn-outline-primary btn-sm">
                                        Create
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-map-marker-alt text-info"></i> Add New Venue</td>
                                <td>
                                    <a asp-action="CreateVenue" class="btn btn-outline-primary btn-sm">
                                        Add
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-chart-bar text-warning"></i> View Reports</td>
                                <td>
                                    <a asp-action="Reports" class="btn btn-outline-primary btn-sm">
                                        View
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-download text-secondary"></i> Export Data</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-secondary" onclick="exportData('csv', 'users')">
                                            Users
                                        </button>
                                        <button class="btn btn-outline-secondary" onclick="exportData('csv', 'events')">
                                            Events
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="admin-table">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>System Status</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><i class="fas fa-database"></i> Database</td>
                                <td><span class="badge bg-success">Online</span></td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-server"></i> Application</td>
                                <td><span class="badge bg-success">Running</span></td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-shield-alt"></i> Security</td>
                                <td><span class="badge bg-success">Active</span></td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-clock"></i> Last Backup</td>
                                <td><span class="badge bg-info">2 hours ago</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh dashboard data every 30 seconds
        setInterval(function() {
            fetch('/Admin/GetDashboardStats')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('total-users').textContent = data.totalUsers;
                    document.getElementById('total-events').textContent = data.totalEvents;
                    document.getElementById('total-venues').textContent = data.totalVenues;
                    document.getElementById('total-bookings').textContent = data.totalBookings;
                })
                .catch(error => console.error('Error refreshing dashboard:', error));
        }, 30000);
    </script>
}
