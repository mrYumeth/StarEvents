@model StarEvents.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
   
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Admin Dashboard</h2>
        <div>
            <a class="btn btn-outline-light" asp-action="Reports">Reports</a>
            <a class="btn btn-primary ms-2" asp-action="Events">Manage Events</a>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3"><div class="card p-3"><small>Users</small><h3>@Model.TotalUsers</h3></div></div>
        <div class="col-md-3"><div class="card p-3"><small>Events</small><h3>@Model.TotalEvents</h3></div></div>
        <div class="col-md-3"><div class="card p-3"><small>Venues</small><h3>@Model.TotalVenues</h3></div></div>
        <div class="col-md-3"><div class="card p-3"><small>Bookings</small><h3>@Model.TotalBookings</h3></div></div>
    </div>

    <div class="row">
        <div class="col-md-7">
            <div class="card mb-3">
                <div class="card-header">Recent Events</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var e in Model.RecentEvents)
                        {
                            <li class="list-group-item bg-transparent">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong>@e.Title</strong><br />
                                        <small class="text-muted">@e.StartDate.ToString("yyyy-MM-dd") â€¢ @e.Venue?.VenueName</small>
                                    </div>
                                    <div><span class="badge bg-primary">@((e.AvailableTickets ?? 0))</span></div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card">
                <div class="card-header">Recent Users</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var u in Model.RecentUsers)
                        {
                            <li class="list-group-item bg-transparent">@u.Email</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
