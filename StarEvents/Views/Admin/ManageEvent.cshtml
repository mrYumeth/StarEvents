@model IEnumerable<StarEvents.Models.Event>
@{
    ViewData["Title"] = "Manage Events";
}

<style>
    .manage-events-container {
        padding: 40px 0;
    }

    .page-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 30px 40px;
        border-radius: 15px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .page-header h1 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
        }

    .filter-tabs {
        display: flex;
        gap: 10px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .filter-tab {
        padding: 10px 20px;
        border: 2px solid #e0e0e0;
        background: white;
        border-radius: 20px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        color: #666;
    }

        .filter-tab.active {
            background: #dc3545;
            color: white;
            border-color: #dc3545;
        }

        .filter-tab:hover:not(.active) {
            border-color: #dc3545;
            color: #dc3545;
        }

    .events-table {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        overflow-x: auto;
    }

    .table {
        margin: 0;
        min-width: 900px;
    }

        .table thead th {
            background: #f8f9fa;
            font-weight: 700;
            border-bottom: 2px solid #dee2e6;
            padding: 15px;
        }

        .table tbody td {
            padding: 15px;
            vertical-align: middle;
        }

    .status-badge {
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-active {
        background: #d4edda;
        color: #155724;
    }

    .status-draft {
        background: #fff3cd;
        color: #856404;
    }

    .status-cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    .action-buttons {
        display: flex;
        gap: 5px;
    }

    .btn-action {
        padding: 6px 12px;
        border-radius: 5px;
        font-size: 0.85rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-approve {
        background: #28a745;
        color: white;
    }

        .btn-approve:hover {
            background: #218838;
        }

    .btn-reject {
        background: #ffc107;
        color: #333;
    }

        .btn-reject:hover {
            background: #e0a800;
        }

    .btn-delete {
        background: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background: #c82333;
        }

    .btn-view {
        background: #007bff;
        color: white;
    }

        .btn-view:hover {
            background: #0056b3;
        }

    .no-events {
        text-align: center;
        padding: 60px 20px;
        color: #999;
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .events-table {
            padding: 15px;
        }
    }
</style>

<div class="manage-events-container">
    <div class="container">
        <!-- Header -->
        <div class="page-header">
            <h1>🎫 Manage Events</h1>
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-light">← Back to Dashboard</a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Filter Tabs -->
        <div class="filter-tabs">
            <a href="@Url.Action("ManageEvents", new { status = "all" })"
               class="filter-tab @(ViewBag.CurrentFilter == "all" ? "active" : "")">
                All Events
            </a>
            <a href="@Url.Action("ManageEvents", new { status = "active" })"
               class="filter-tab @(ViewBag.CurrentFilter == "active" ? "active" : "")">
                Active
            </a>
            <a href="@Url.Action("ManageEvents", new { status = "draft" })"
               class="filter-tab @(ViewBag.CurrentFilter == "draft" ? "active" : "")">
                Pending Approval
            </a>
            <a href="@Url.Action("ManageEvents", new { status = "cancelled" })"
               class="filter-tab @(ViewBag.CurrentFilter == "cancelled" ? "active" : "")">
                Cancelled
            </a>
        </div>

        <!-- Events Table -->
        <div class="events-table">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Event Name</th>
                            <th>Organizer</th>
                            <th>Venue</th>
                            <th>Date</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evt in Model)
                        {
                            <tr>
                                <td><strong>#@evt.Id</strong></td>
                                <td>
                                    <strong>@evt.Title</strong>
                                    <br>
                                    <small class="text-muted">@evt.Category</small>
                                </td>
                                <td>@evt.Organizer.FirstName @evt.Organizer.LastName</td>
                                <td>@evt.Venue.VenueName</td>
                                <td>@evt.StartDate.ToString("MMM dd, yyyy")</td>
                                <td>LKR @evt.TicketPrice.ToString("N2")</td>
                                <td>
                                    <span class="status-badge status-@evt.Status.ToLower()">
                                        @evt.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Details", "Events", new { id = evt.Id })"
                                           class="btn-action btn-view" title="View">
                                            👁️
                                        </a>

                                        @if (evt.Status == "Draft")
                                        {
                                            <form asp-action="ApproveEvent" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@evt.Id" />
                                                <button type="submit" class="btn-action btn-approve" title="Approve">
                                                    ✓
                                                </button>
                                            </form>

                                            <button type="button" class="btn-action btn-reject"
                                                    onclick="showRejectModal(@evt.Id)" title="Reject">
                                                ✗
                                            </button>
                                        }

                                        <button type="button" class="btn-action btn-delete"
                                                onclick="confirmDelete(@evt.Id, '@evt.Title')" title="Delete">
                                            🗑️
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="no-events">
                    <h3>No Events Found</h3>
                    <p>No events match the selected filter.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="RejectEvent" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="rejectEventId" />
                <div class="modal-body">
                    <p>Are you sure you want to reject this event?</p>
                    <div class="mb-3">
                        <label class="form-label">Reason for rejection:</label>
                        <textarea name="reason" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Reject Event</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="DeleteEvent" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="deleteEventId" />
                <div class="modal-body">
                    <p><strong>Are you sure you want to delete this event?</strong></p>
                    <p id="deleteEventName" class="text-danger"></p>
                    <div class="alert alert-warning">
                        ⚠️ This action cannot be undone. All associated bookings will be affected.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete Event</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showRejectModal(eventId) {
            document.getElementById('rejectEventId').value = eventId;
            var modal = new bootstrap.Modal(document.getElementById('rejectModal'));
            modal.show();
        }

        function confirmDelete(eventId, eventName) {
            document.getElementById('deleteEventId').value = eventId;
            document.getElementById('deleteEventName').textContent = eventName;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}