@model IEnumerable<StarEvents.Models.Event>
@{
    ViewData["Title"] = "Manage Events";
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Events</h2>
        <div>
            <a class="btn btn-outline-light" asp-action="Venues">Manage Venues</a>
            <a class="btn btn-primary ms-2" asp-action="CreateEvent">Create Event</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-striped table-hover table-dark align-middle">
        <thead>
            <tr><th>Title</th><th>When</th><th>Venue</th><th>Price</th><th>Available</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Title</td>
                    <td>@e.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@(e.Venue?.VenueName ?? "-")</td>
                    <td>@e.TicketPrice.ToString("C")</td>
                    <td>@(e.AvailableTickets ?? 0)</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="EditEvent" asp-route-id="@e.Id">Edit</a>
                        <form method="post" asp-action="DeleteEvent" asp-route-id="@e.Id" class="d-inline" onsubmit="return confirm('Delete this event?');">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
