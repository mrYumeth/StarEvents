@model IEnumerable<StarEvents.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<style>
    .bookings-container {
        padding: 40px 0;
    }

    .bookings-header {
        margin-bottom: 40px;
    }

    .bookings-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .bookings-header p {
        font-size: 1.1rem;
        color: #666;
    }

    .bookings-tabs {
        display: flex;
        gap: 10px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .tab-button {
        padding: 12px 25px;
        border: 2px solid #e0e0e0;
        background: white;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        color: #666;
    }

    .tab-button.active {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: #667eea;
    }

    .tab-button:hover:not(.active) {
        border-color: #667eea;
        color: #667eea;
    }

    .bookings-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
    }

    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9rem;
        color: #666;
    }

    .booking-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .booking-card:hover {
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        transform: translateY(-3px);
    }

    .booking-card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .booking-id {
        font-size: 1.2rem;
        font-weight: 700;
    }

    .booking-status {
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        background: rgba(255,255,255,0.2);
    }

    .status-confirmed {
        background: #d4edda;
        color: #155724;
    }

    .status-pending {
        background: #fff3cd;
        color: #856404;
    }

    .status-cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    .status-completed {
        background: #d1ecf1;
        color: #0c5460;
    }

    .booking-card-body {
        padding: 25px;
    }

    .event-info {
        display: grid;
        grid-template-columns: 100px 1fr;
        gap: 20px;
        margin-bottom: 20px;
    }

    .event-image {
        width: 100px;
        height: 100px;
        border-radius: 10px;
        object-fit: cover;
    }

    .event-details {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .event-name {
        font-size: 1.4rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .event-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        color: #666;
        font-size: 0.95rem;
    }

    .event-meta-item {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .booking-details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .booking-detail-item {
        text-align: center;
    }

    .booking-detail-label {
        font-size: 0.85rem;
        color: #666;
        margin-bottom: 5px;
    }

    .booking-detail-value {
        font-size: 1.1rem;
        font-weight: 700;
        color: #333;
    }

    .booking-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 10px 20px;
        border-radius: 20px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 0.9rem;
    }

    .btn-view {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
    }

    .btn-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .btn-cancel {
        background: white;
        color: #dc3545;
        border: 2px solid #dc3545;
    }

    .btn-cancel:hover {
        background: #dc3545;
        color: white;
    }

    .btn-secondary {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
    }

    .btn-secondary:hover {
        background: #667eea;
        color: white;
    }

    .no-bookings {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .no-bookings-icon {
        font-size: 5rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .no-bookings h3 {
        font-size: 1.8rem;
        color: #666;
        margin-bottom: 15px;
    }

    .no-bookings p {
        font-size: 1.1rem;
        color: #999;
        margin-bottom: 30px;
    }

    .btn-browse {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 15px 40px;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .btn-browse:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        color: white;
    }

    @@media (max-width: 768px) {
        .event-info {
            grid-template-columns: 1fr;
        }

        .event-image {
            width: 100%;
            height: 200px;
        }

        .bookings-header h1 {
            font-size: 2rem;
        }

        .booking-card-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }

        .booking-actions {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
            justify-content: center;
        }
    }
</style>

