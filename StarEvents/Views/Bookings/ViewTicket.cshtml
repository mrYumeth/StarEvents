@model StarEvents.Models.Booking
@{
    ViewData["Title"] = "E-Ticket";
}

<style>
    /* --- Styles from your original file --- */
    .ticket-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }
    /* ... (all your other styles are here, no changes needed) ... */
</style>

<div class="ticket-container">
    <div class="ticket-actions">
        <a href="@Url.Action("MyBookings", "Bookings")" class="btn-back">
            ← Back to My Bookings
        </a>
        <div style="display: flex; gap: 10px;">
            <button onclick="window.print()" class="btn-print">
                🖨️ Print Ticket
            </button>
            <a href="#" class="btn-download" onclick="downloadTicket(); return false;">
                📥 Download PDF
            </a>
        </div>
    </div>

    <div class="ticket-card" id="ticketCard">
        <div class="ticket-header">
            <div class="ticket-logo">🎫 StarEvents</div>
            <div class="ticket-type">Electronic Ticket</div>
        </div>

        <div class="ticket-body">
            <div style="text-align: center;">
                <span class="status-badge status-@Model.Status.ToLower()">
                    @if (Model.Status == "Confirmed")
                    {
                        <span>✓ @Model.Status</span>
                    }
                    else if (Model.Status == "Cancelled")
                    {
                        <span>✗ @Model.Status</span>
                    }
                    else
                    {
                        <span>@Model.Status</span>
                    }
                </span>
            </div>

            <h1 class="event-title">@Model.Event.Title</h1>

            <div class="booking-reference">
                <div class="booking-ref-label">Booking Reference</div>
                <div class="booking-ref-value">#@Model.Id.ToString("D6")</div>
            </div>

            <div class="ticket-details-grid">
                <div class="detail-item">
                    <div class="detail-label">📅 Date & Time</div>
                    <div class="detail-value">@Model.Event.StartDate.ToString("ddd, MMM dd, yyyy")</div>
                    <div class="detail-value">@Model.Event.StartDate.ToString("h:mm tt")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">📍 Venue</div>
                    <div class="detail-value">@Model.Event.VenueName</div>
                    <div class="detail-value" style="font-size: 0.95rem; color: #666;">@Model.Event.Location</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">🎟️ Number of Tickets</div>
                    <div class="detail-value large">@Model.TicketQuantity</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">💰 Total Amount</div>
                    <div class="detail-value large">LKR @Model.TotalAmount.ToString("N2")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">👤 Customer Name</div>
                    <div class="detail-value">@Model.Customer.FirstName @Model.Customer.LastName</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">📧 Email</div>
                    <div class="detail-value" style="font-size: 0.95rem;">@Model.Customer.Email</div>
                </div>
            </div>

            <div class="qr-section">
                <h3 class="qr-title">📱 Entry QR Code</h3>
                <div class="qr-code-box">
                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=BOOKING-@Model.Id-@Model.Payment.TransactionId"
                         alt="Ticket QR Code" />
                </div>
                <p class="qr-instructions">
                    Present this QR code at the venue entrance for scanning.
                    Screenshot or print this ticket for entry.
                </p>
            </div>

            <div class="venue-info">
                <h3>📍 Venue Information</h3>
                <div class="venue-detail">
                    <span class="icon">🏢</span>
                    <span>@Model.Event.VenueName</span>
                </div>
                <div class="venue-detail">
                    <span class="icon">📍</span>
                    <span>@Model.Event.Location</span>
                </div>
            </div>

            <div class="important-notes">
                <h3>⚠️ Important Information</h3>
                <ul>
                    <li>Please arrive at least 30 minutes before the event start time</li>
                    <li>This ticket is valid for @Model.TicketQuantity person(s) only</li>
                    <li>ID verification may be required at the entrance</li>
                    <li>Outside food and beverages are not permitted</li>
                    <li>Photography and recording may be restricted</li>
                    <li>Ticket is non-transferable and non-refundable after 48 hours</li>
                </ul>
            </div>
        </div>

        <div class="ticket-footer">
            <p><strong>Transaction ID:</strong> @Model.Payment.TransactionId</p>
            <p><strong>Booking Date:</strong> @Model.BookingDate.ToString("MMM dd, yyyy h:mm tt")</p>
            <p>For support, contact: support@starevents.com | +94 11 234 5678</p>
            <p style="margin-top: 15px; font-size: 0.8rem; color: #999;">
                © @DateTime.Now.Year StarEvents. All rights reserved.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmCancel() {
            var modal = new bootstrap.Modal(document.getElementById('cancelModal'));
            modal.show();
        }

        function downloadTicket() {
            window.print();
        }
    </script>
}