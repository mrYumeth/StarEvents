@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #2b2b2b; color: #faf5ef;">
    <div class="text-center">
        <h1 class="display-4 mb-4">Welcome to Star Events</h1>
        <p class="mb-5">Your one-stop platform for managing and discovering amazing events.</p>

        <!-- Buttons -->
        <div class="d-flex justify-content-center gap-3">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-theme btn-lg px-4">Log In</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-lg px-4">Register</a>
        </div>
    </div>
</div>

<style>
    .btn-theme {
        background-color: #faf5ef;
        color: #2b2b2b;
        font-weight: bold;
    }

        .btn-theme:hover {
            background-color: #e0dbd4;
            color: #000;
        }
</style>
