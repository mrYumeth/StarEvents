@* Add the line below to import the necessary library for SignInManager *@
@using Microsoft.AspNetCore.Identity
@using StarEvents.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarEvents</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StarEvents.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background-color: #2b2b2b;
            color: #faf5ef;
        }

        main {
            min-height: 80vh;
        }

        header, footer {
            background-color: #1f1f1f;
            color: #faf5ef;
        }

        .navbar-dark .navbar-nav .nav-link,
        .navbar-dark .navbar-brand {
            color: #faf5ef !important;
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #667eea !important;
            }

        footer {
            text-align: center;
            padding: 15px;
            margin-top: 20px;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    @inject SignInManager<ApplicationUser> SignInManager

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/StarEvents.png" alt="Star Events Logo" style="height:40px; margin-right:10px;" />
                    StarEvents
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            // --- LINKS FOR ALL LOGGED-IN USERS ---
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            @if (User.IsInRole("Customer"))
                            {
                                // --- CUSTOMER-SPECIFIC LINKS ---
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Events" asp-action="Index">Browse Events</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Bookings" asp-action="MyBookings">My Bookings</a>
                                </li>
                            }
                            else if (User.IsInRole("Organizer"))
                            {
                                // --- ORGANIZER-SPECIFIC LINKS ---
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Organizers" asp-action="MyEvents">My Events</a>
                                </li>
                            }
                            else if (User.IsInRole("Admin"))
                            {
                                // --- ADMIN-SPECIFIC LINKS ---
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                                </li>
                            }
                        }
                        else
                        {
                            // --- LINKS FOR GUESTS (NOT LOGGED IN) ---
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Events" asp-action="Index">Browse Events</a>
                            </li>
                        }
                    </ul>

                    @* This partial view correctly handles showing the user's name and Login/Logout links *@
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="container">
            &copy; @DateTime.Now.Year - StarEvents - Where Memories Are Made
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>