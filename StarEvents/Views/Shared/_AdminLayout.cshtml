@using Microsoft.AspNetCore.Identity
@using StarEvents.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin - StarEvents</title>

    <!-- Bootstrap 5 CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Optional icons / font -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Small admin theme tweaks */
        body {
            background: #0b1220;
            color: #e6eef8;
        }

        .sidebar {
            background: #071025;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #cfe3ff;
            }

                .sidebar .nav-link.active {
                    background: #0f1724;
                    color: #fff;
                    font-weight: 600;
                }

        .topbar {
            background: #061226;
        }

        .card, .table {
            background: #071026;
            color: #e6eef8;
        }

        a {
            color: #bcd1ff;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar p-3 flex-shrink-0" style="width:260px;">
            <div class="d-flex align-items-center mb-4">
                <img src="~/images/StarEvents.png" alt="logo" style="height:40px; margin-right:8px;" />
                <div>
                    <div class="h6 mb-0">StarEvents</div>
                    <small class="text-muted">Admin Console</small>
                </div>
            </div>

            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")"
                       asp-controller="Admin" asp-action="Index">
                        <i class="fa fa-dashboard me-2"></i>Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Events" ? "active" : "")"
                       asp-controller="Admin" asp-action="Events">
                        <i class="fa fa-calendar-days me-2"></i>Events
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Venues">
                        <i class="fa fa-building me-2"></i>Venues
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Users">
                        <i class="fa fa-users me-2"></i>Users
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Reports">
                        <i class="fa fa-chart-line me-2"></i>Reports
                    </a>
                </li>

                <li class="nav-item mt-3">
                    <a class="nav-link text-danger" asp-controller="Home" asp-action="Index">Return site</a>
                </li>
            </ul>

            <div class="mt-auto pt-3">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="small text-muted mb-1">Signed in as</div>
                    <div class="fw-bold">@User.Identity?.Name</div>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="mt-2">
                        <button type="submit" class="btn btn-outline-light btn-sm">Sign out</button>
                    </form>
                }
            </div>
        </nav>

        <!-- Page content -->
        <div class="flex-grow-1">
            <header class="topbar py-2 px-3 border-bottom">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">@ViewData["Title"]</h5>
                    </div>
                    <div>
                        <span class="me-3 text-muted">Admin Console</span>
                        <a class="btn btn-sm btn-outline-light" href="/">View site</a>
                    </div>
                </div>
            </header>

            <main class="p-4 container-fluid">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }

                @RenderBody()
            </main>

            <footer class="text-muted py-3 px-4">
                <div class="container-fluid">
                    <small>&copy; @DateTime.UtcNow.Year StarEvents</small>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
