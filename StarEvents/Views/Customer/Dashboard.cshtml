@model StarEvents.ViewModels.CustomerDashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@functions {
    // Helper function to safely format dates from the Booking model
    public string FormatDate(object dateValue)
    {
        if (dateValue is DateTime date)
        {
            return date.ToString("MMM dd, yyyy");
        }
        return dateValue?.ToString() ?? string.Empty;
    }
}


@section Styles {
    <style>
        /* Your CSS styles remain the same */
        .dashboard-container {
            padding: 30px 0;
            background-color: #f8f9fa;
            min-height: calc(100vh - 56px);
        }

        .welcome-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

            .welcome-section h1 {
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 10px;
            }

            .welcome-section p {
                font-size: 1.1rem;
                opacity: 0.95;
            }

        .stats-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

            .stats-card .icon {
                font-size: 3rem;
                margin-bottom: 15px;
                color: #667eea;
            }

            .stats-card h3 {
                font-size: 2rem;
                font-weight: 700;
                color: #333;
                margin-bottom: 5px;
            }

            .stats-card p {
                color: #666;
                font-size: 0.95rem;
                margin: 0;
            }

        .section-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .section-title::before {
                content: '';
                width: 5px;
                height: 30px;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border-radius: 3px;
            }

        .event-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

            .event-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

            .event-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .event-card-body {
            padding: 20px;
        }

        .event-date {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 10px;
        }

        .event-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }

        .event-location {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .event-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: #667eea;
            margin-bottom: 15px;
        }

        .btn-book {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-book:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                color: white;
            }

        .booking-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            margin-bottom: 20px;
            transition: transform 0.3s ease;
        }

            .booking-card:hover {
                transform: translateX(5px);
            }

        .booking-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .booking-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: #333;
            margin: 0;
        }

        .booking-status {
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .status-confirmed {
            background: #d4edda;
            color: #155724;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
        }

        .booking-details {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 15px;
        }

        .booking-info {
            color: #666;
            font-size: 0.9rem;
        }

            .booking-info strong {
                color: #333;
                display: block;
                margin-bottom: 5px;
            }

        .quick-action-card {
            background: white;
            border-radius: 12px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            height: 100%;
        }

            .quick-action-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .quick-action-icon {
            font-size: 3.5rem;
            margin-bottom: 20px;
            color: #667eea;
        }

        .quick-action-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }

        .quick-action-desc {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 20px;
        }

        .btn-action {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
            padding: 10px 25px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-action:hover {
                background: #667eea;
                color: white;
            }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #999;
        }

            .no-data i {
                font-size: 4rem;
                margin-bottom: 20px;
                color: #ddd;
            }
    </style>
}

<div class="dashboard-container">
    <div class="container">
        <div class="welcome-section">
            <h1>Welcome back, @Model.UserName! 👋</h1>
            <p>Discover amazing events and create unforgettable memories.</p>
        </div>

        <div class="row mb-5">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="stats-card">
                    <div class="icon">🎫</div>
                    <h3>@Model.TotalBookings</h3>
                    <p>Confirmed Bookings</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="stats-card">
                    <div class="icon">📅</div>
                    <h3>@Model.UpcomingEventsCount</h3>
                    <p>Upcoming Events</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="stats-card">
                    <div class="icon">⭐</div>
                    <h3>@Model.LoyaltyPoints</h3>
                    <p>Loyalty Points</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="stats-card">
                    <div class="icon">💰</div>
                    <h3>LKR @Model.TotalSpent.ToString("N2")</h3>
                    <p>Total Spent</p>
                </div>
            </div>
        </div>

        <div class="mb-5">
            <h2 class="section-title">🔥 Featured Events</h2>
            <div class="row">
                @if (Model.FeaturedEvents != null && Model.FeaturedEvents.Any())
                {
                    foreach (var evt in Model.FeaturedEvents)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="event-card">
                                <img src="@evt.ImageUrl" alt="@evt.Title" onerror="this.src='/images/default-event.jpg'" />
                                <div class="event-card-body">
                                    <span class="event-date">📅 @evt.StartDate.ToString("MMM dd, yyyy")</span>
                                    <h3 class="event-title">@evt.Title</h3>
                                    <p class="event-location">
                                        <i class="fas fa-map-marker-alt"></i> @evt.Location
                                    </p>
                                    <div class="event-price">LKR @evt.TicketPrice.ToString("N2")</div>
                                    <a href="@Url.Action("Details", "Events", new { id = evt.Id })" class="btn btn-book">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12"><div class="no-data"><p>No featured events right now.</p></div></div>
                }
            </div>
            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Events")" class="btn btn-book" style="width: auto; padding: 12px 40px;">View All Events →</a>
            </div>
        </div>

        <div class="mb-5">
            <h2 class="section-title">🎟️ Recent Bookings</h2>
            @if (Model.RecentBookings != null && Model.RecentBookings.Any())
            {
                foreach (var booking in Model.RecentBookings)
                {
                    <div class="booking-card">
                        <div class="booking-header">
                            <h3 class="booking-title">@booking.Event.Title</h3>
                            <span class="booking-status status-@booking.Status.ToLower()">@booking.Status</span>
                        </div>
                        <div class="booking-details">
                            <div class="booking-info">
                                <strong>Booking ID</strong>
                                #@booking.Id.ToString("D6")
                            </div>
                            <div class="booking-info">
                                <strong>Date</strong>
                                @FormatDate(booking.Event.StartDate)
                            </div>
                            <div class="booking-info">
                                <strong>Tickets</strong>
                                @booking.TicketQuantity tickets
                            </div>
                            <div class="booking-info">
                                <strong>Total Amount</strong>
                                LKR @booking.TotalAmount.ToString("N2")
                            </div>
                            <div class="booking-info">
                                <a href="@Url.Action("ViewTicket", "Bookings", new { id = booking.Id })" class="btn btn-sm btn-action">View Ticket</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-data">
                    <i class="fas fa-ticket-alt"></i>
                    <p>No bookings yet. Book your first event now!</p>
                </div>
            }
        </div>

        <div class="mb-5">
            <h2 class="section-title">⚡ Quick Actions</h2>
            <div class="row">
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="quick-action-card">
                        <div class="quick-action-icon">🔍</div>
                        <h3 class="quick-action-title">Browse Events</h3>
                        <p class="quick-action-desc">Discover exciting events near you</p>
                        <a href="@Url.Action("Index", "Events")" class="btn btn-action">Explore</a>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="quick-action-card">
                        <div class="quick-action-icon">📜</div>
                        <h3 class="quick-action-title">My Bookings</h3>
                        <p class="quick-action-desc">View all your bookings</p>
                        <a href="@Url.Action("MyBookings", "Bookings")" class="btn btn-action">View</a>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="quick-action-card">
                        <div class="quick-action-icon">👤</div>
                        <h3 class="quick-action-title">My Profile</h3>
                        <p class="quick-action-desc">Update your information</p>
                        <a href="@Url.Action("Profile", "Account")" class="btn btn-action">Edit</a>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="quick-action-card">
                        <div class="quick-action-icon">💳</div>
                        <h3 class="quick-action-title">Payment Methods</h3>
                        <p class="quick-action-desc">Manage payment options</p>
                        <a href="@Url.Action("PaymentMethods", "Account")" class="btn btn-action">Manage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any dashboard-specific JavaScript here
        $(document).ready(function() {
            // Animate stats on load
            $('.stats-card h3').each(function() {
                var $this = $(this);
                var countTo = $this.text();

                // Only animate if it's a number
                if (!isNaN(countTo)) {
                    $({ countNum: 0 }).animate({
                        countNum: countTo
                    }, {
                        duration: 1500,
                        easing: 'swing',
                        step: function() {
                            $this.text(Math.floor(this.countNum));
                        },
                        complete: function() {
                            $this.text(this.countNum);
                        }
                    });
                }
            });
        });
    </script>
}