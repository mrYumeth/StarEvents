@using System.Linq
@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var totalBookings = (int?)(ViewBag.TotalBookings) ?? 0;
    var upcomingEvents = (int?)(ViewBag.UpcomingEvents) ?? 0;
    var loyaltyPoints = (int?)(ViewBag.LoyaltyPoints) ?? 0;

    decimal totalSpentValue = 0.00m;
    if (ViewBag.TotalSpent != null)
    {
        if (!decimal.TryParse(Convert.ToString(ViewBag.TotalSpent), out totalSpentValue))
        {
            totalSpentValue = 0.00m; // Fallback if conversion fails
        }
    }
    var totalSpent = totalSpentValue;
}

@functions {
    public string FormatDate(object dateValue)
    {
        if (dateValue is DateTime date)
        {
            return date.ToString("MMM dd, yyyy");
        }
        return dateValue?.ToString() ?? string.Empty;
    }

    public string FormatPrice(object priceValue)
    {
        if (priceValue is decimal price)
        {
            return price.ToString("N2");
        }
        if (decimal.TryParse(priceValue?.ToString(), out decimal parsedPrice))
        {
            return parsedPrice.ToString("N2");
        }
        return "0.00"; // Default value if parsing fails
    }
}



@section Styles {
    <style>
        /* --- Dashboard Styling --- */
        body {
            overflow-x: hidden;
        }

        .dashboard-container {
            padding: 30px 0;
            min-height: calc(100vh - 56px);
        }

        .welcome-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

            .welcome-section h1 {
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 10px;
            }

            .welcome-section p {
                font-size: 1.1rem;
                opacity: 0.95;
            }

        .stats-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            height: 100%;
            backface-visibility: hidden;
            transform: translateZ(0);
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

            .stats-card .icon {
                margin-bottom: 15px;
            }

                .stats-card .icon img {
                    width: 48px;
                    height: 48px;
                    object-fit: contain;
                }

            .stats-card h3 {
                font-size: 2rem;
                font-weight: 700;
                color: #333;
                margin-bottom: 5px;
            }

            .stats-card p {
                color: #666;
                font-size: 0.95rem;
                margin: 0;
            }

        .section-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #333; /* Changed to dark for better contrast on light background */
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .section-title::before {
                content: '';
                width: 5px;
                height: 30px;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border-radius: 3px;
            }

        .event-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            height: 100%;
        }

            .event-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

            .event-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .event-card-body {
            padding: 20px;
        }

        .event-date {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 10px;
        }

        .event-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }

        .event-location {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .event-location img {
                width: 16px;
                height: 16px;
                object-fit: contain;
            }

        .event-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: #667eea;
            margin-bottom: 15px;
        }

        .btn-book {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-book:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                color: white;
            }

        .booking-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
            margin-bottom: 15px;
        }

            .booking-card:hover {
                transform: translateX(5px);
            }

        .booking-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .booking-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: #333;
            margin: 0;
        }

        .booking-status {
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .status-confirmed {
            background: #d4edda;
            color: #155724;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
        }

        .booking-details {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 15px;
        }

        .booking-info {
            color: #666;
            font-size: 0.9rem;
        }

            .booking-info strong {
                color: #333;
                display: block;
                margin-bottom: 5px;
            }

        .quick-action-card {
            background: white;
            border-radius: 12px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

            .quick-action-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .quick-action-icon {
            margin-bottom: 20px;
            flex-shrink: 0;
        }

            .quick-action-icon img {
                width: 48px;
                height: 48px;
                object-fit: contain;
            }

        .quick-action-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
            flex-shrink: 0;
        }

        .quick-action-desc {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: auto;
            padding-bottom: 20px;
        }

        .btn-action {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
            padding: 10px 25px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-top: 10px;
            flex-shrink: 0;
        }

            .btn-action:hover {
                background: #667eea;
                color: white;
            }

        .no-data {
            text-align: center;
            padding: 40px;
            background: #f8f9fa;
            border-radius: 12px;
            color: #6c757d;
        }

            .no-data img {
                width: 60px;
                height: 60px;
                margin-bottom: 20px;
                object-fit: contain;
                opacity: 0.8;
            }
    </style>
}

<div class="dashboard-container">
    <div class="container">
        <div class="welcome-section">
            <h1>Welcome back, @User.Identity.Name! 👋</h1>
            <p>Discover amazing events and create unforgettable memories.</p>
        </div>

        <div class="row mb-5">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stats-card">
                    <div class="icon"><img src="/images/bookings-icon.jpg" alt="Total Bookings" /></div>
                    <h3>@totalBookings</h3>
                    <p>Total Bookings</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stats-card">
                    <div class="icon"><img src="/images/events-icon.jpg" alt="Upcoming Events" /></div>
                    <h3>@upcomingEvents</h3>
                    <p>Upcoming Events</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stats-card">
                    <div class="icon"><img src="/images/loyalty-icon.jpg" alt="Loyalty Points" /></div>
                    <h3>@loyaltyPoints</h3>
                    <p>Loyalty Points</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stats-card">
                    <div class="icon"><img src="/images/spent-icon.jpg" alt="Total Spent" /></div>
                    <h3>LKR @totalSpent.ToString("N2")</h3>
                    <p>Total Spent</p>
                </div>
            </div>
        </div>

        <div class="mb-5">
            <h2 class="section-title">Featured Events</h2>
            <div class="row">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var evt in ((System.Collections.Generic.IEnumerable<dynamic>)Model).Take(3))
                    {
                        if (evt != null && evt.EventId != null)
                        {
                            <div class="col-md-4 mb-4">
                                <div class="event-card">
                                    <img src="@evt.ImageUrl" alt="@evt.EventName" onerror="this.onerror=null; this.src='/images/default-event.jpg';" />
                                    <div class="event-card-body">
                                        <span class="event-date">📅 @FormatDate(evt.EventDate)</span>
                                        <h3 class="event-title">@evt.EventName</h3>
                                        <p class="event-location">
                                            <img src="/images/location-icon.jpg" alt="Location" /> @evt.Location
                                        </p>
                                        <div class="event-price">LKR @FormatPrice(evt.Price)</div>
                                        <a href="@Url.Action("Book", "Bookings", new { id = evt.EventId })" class="btn btn-book">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="no-data">
                            <img src="/images/calendar-fail-icon.jpg" alt="No Events" />
                            <p>No upcoming events at the moment. Check back soon!</p>
                        </div>
                    </div>
                }
            </div>
            @if (Model != null && Model.Count > 3)
            {
                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Events")" class="btn btn-book" style="width: auto; padding: 12px 40px;">View All Events →</a>
                </div>
            }
        </div>

        <div class="mb-5">
            <h2 class="section-title">Recent Bookings</h2>
            @if (ViewBag.RecentBookings != null && ViewBag.RecentBookings.Count > 0)
            {
                foreach (var booking in ViewBag.RecentBookings)
                {
                    if (booking != null && booking.BookingId != null)
                    {
                        <div class="booking-card">
                            <div class="booking-header">
                                <h3 class="booking-title">@booking.EventName</h3>
                                <span class="booking-status status-@booking.Status.ToLower()">@booking.Status</span>
                            </div>
                            <div class="booking-details">
                                <div class="booking-info">
                                    <strong>Booking ID</strong>
                                    #@booking.BookingId
                                </div>
                                <div class="booking-info">
                                    <strong>Date</strong>
                                    @FormatDate(booking.EventDate)
                                </div>
                                <div class="booking-info">
                                    <strong>Tickets</strong>
                                    @booking.TicketQuantity tickets
                                </div>
                                <div class="booking-info">
                                    <strong>Total Amount</strong>
                                    LKR @FormatPrice(booking.TotalAmount)
                                </div>
                                <div class="booking-info">
                                    <a href="@Url.Action("ViewTicket", "Bookings", new { id = booking.BookingId })" class="btn btn-sm btn-action">View Ticket</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <div class="no-data">
                    <img src="/images/ticket-fail-icon.jpg" alt="No Bookings" />
                    <p>No bookings yet. Book your first event now!</p>
                </div>
            }
        </div>

        <div class="mb-5">
            <h2 class="section-title">⚡ Quick Actions</h2>
            <div class="row">
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="quick-action-card">
                        <div class="quick-action-icon"><img src="/images/browse-icon.jpg" alt="Browse Events" /></div>
                        <h3 class="quick-action-title">Browse Events</h3>
                        <p class="quick-action-desc">Discover exciting events near you.</p>
                        <a href="@Url.Action("Index", "Events")" class="btn btn-action">Explore</a>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="quick-action-card">
                        <div class="quick-action-icon"><img src="/images/bookings-action-icon.jpg" alt="My Bookings" /></div>
                        <h3 class="quick-action-title">My Bookings</h3>
                        <p class="quick-action-desc">View your past and upcoming tickets.</p>
                        <a href="@Url.Action("MyBookings", "Bookings")" class="btn btn-action">View</a>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="quick-action-card">
                        <div class="quick-action-icon"><img src="/images/profile-icon.jpg" alt="My Profile" /></div>
                        <h3 class="quick-action-title">My Profile</h3>
                        <p class="quick-action-desc">Keep your personal information up to date.</p>
                        <a href="@Url.Action("Profile", "Account")" class="btn btn-action">Edit</a>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="quick-action-card">
                        <div class="quick-action-icon"><img src="/images/payment-icon.jpg" alt="Payment Methods" /></div>
                        <h3 class="quick-action-title">Payment Methods</h3>
                        <p class="quick-action-desc">Manage your saved payment options.</p>
                        <a href="@Url.Action("PaymentMethods", "Account")" class="btn btn-action">Manage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional: Add any dashboard-specific JavaScript here.
    </script>
}